<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="WidgetBtc.App"
             RequestedThemeVariant="Default">
             <!-- "Default" ThemeVariant follows system theme variant. "Dark" or "Light" are other available options. -->

    <Application.Styles>
        <FluentTheme />
    </Application.Styles>
   <TrayIcon.Icons>
    <TrayIcons>
      <TrayIcon Icon="Assets/btc.ico" ToolTipText="Widget Btc" Clicked="Maximize">
        <TrayIcon.Menu>
          <NativeMenu>
            <NativeMenuItem Header="Settings">
              <NativeMenu >
                <NativeMenuItem Header="BTC Dolar" ToggleType="Radio" />
                <NativeMenuItem Header="BTC Real" ToggleType="Radio"  />
                <NativeMenuItemSeparator />
                <NativeMenuItem Header="Dolar" ToggleType="Radio"  />
                <NativeMenuItem Icon="Assets/btc.ico" ToggleType="Radio" Header="Restore Defaults" />
              </NativeMenu>
            </NativeMenuItem>
            <NativeMenuItem Header="Exit" Click="Exit"/>
          </NativeMenu>
        </TrayIcon.Menu>
      </TrayIcon>
    </TrayIcons>
  </TrayIcon.Icons>
    
</Application>
